<UserControl x:ConnectionId='1'
    x:Class="PicturesAndNotes.InkColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PicturesAndNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
                                         >

    <Border x:Name="MainBorder" BorderBrush="#880099ff" BorderThickness="2.5" Background="#440099ff"
            CornerRadius="15.0,0.0,0.0,0.0" >
        <StackPanel x:Name="PickerStack" Margin="25,0,0,0"
                Orientation="Horizontal">
        </StackPanel>
    </Border>
</UserControl>

